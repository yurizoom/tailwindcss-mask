{
    "compilerOptions": {
        "target": "es6",
        "useDefineForClassFields": true,
        "module": "commonjs",
        "lib": [],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "removeComments": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ]
}